{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": ["error", 4] // enforce 2-space indentation
//        "quotes": ["error", "double"], // enforce single quotes
//        "semi": ["error", "always"], // enforce semicolons
//        "no-console": "off" // allow console.log
    },
    "plugins": ["jest"]
}
